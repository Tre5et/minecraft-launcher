<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox fx:id="rootPane" styleClass="element-root" alignment="TOP_CENTER" visible="false" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.treset.minecraftlauncher.ui.create.InstanceCreatorElement">
    <AnchorPane minWidth="-Infinity">
        <ScrollPane fx:id="scrollContainer" styleClass="element" minWidth="-Infinity" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <GridPane alignment="TOP_CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                </rowConstraints>

                <VBox>
                    <HBox alignment="CENTER_LEFT" styleClass="title-container">
                        <Label styleClass="title" text="%creator.instance.label.instance"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <TextField fx:id="nameInput" promptText="%creator.prompt.name" />
                        <padding>
                            <Insets left="10.0" top="10.0" />
                        </padding>
                    </HBox>
                    <Label fx:id="nameError" styleClass="error" text="%creator.label.error.name" visible="false" />
                </VBox>

                <VBox GridPane.columnIndex="1">
                    <HBox alignment="CENTER_LEFT" styleClass="title-container">
                        <Label styleClass="title" text="%creator.instance.label.version"/>
                    </HBox>
                    <fx:include fx:id="versionCreator" source="VersionCreatorElement.fxml" />
                </VBox>

                <VBox GridPane.columnIndex="2">
                    <HBox alignment="CENTER_LEFT" styleClass="title-container">
                        <Label styleClass="title" text="%creator.instance.label.saves"/>
                    </HBox>
                    <fx:include fx:id="savesCreator" source="SavesCreatorElement.fxml" />
                </VBox>

                <VBox GridPane.rowIndex="1">
                    <HBox alignment="CENTER_LEFT" styleClass="title-container">
                        <Label styleClass="title" text="%creator.instance.label.resourcepacks"/>
                    </HBox>
                    <fx:include fx:id="resourcepacksCreator" source="ResourcepacksCreatorElement.fxml" />
                </VBox>

                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <HBox alignment="CENTER_LEFT" styleClass="title-container">
                        <Label styleClass="title" text="%creator.instance.label.options"/>
                    </HBox>
                    <fx:include fx:id="optionsCreator" source="OptionsCreatorElement.fxml" />
                </VBox>

                <VBox fx:id="modsContainer" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <HBox alignment="CENTER_LEFT" styleClass="title-container">
                        <Label styleClass="title" text="%creator.instance.label.mods"/>
                    </HBox>
                    <fx:include fx:id="modsCreator" source="ModsCreatorElement.fxml" />
                </VBox>

                <Button fx:id="createButton" onAction="#onCreateButtonClicked" text="%creator.button.create" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.fillWidth="true" GridPane.rowIndex="3" GridPane.halignment="CENTER" />
            </GridPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ScrollPane>
        <GridPane fx:id="creationPopup" visible="false" minWidth="-Infinity" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="NEVER" valignment="CENTER" />
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
            <VBox styleClass="popup-container" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" >
                <Label fx:id="popupLabel" text="%creator.instance.popup.label.undefined" />
                <Button fx:id="popupBackButton" onMouseClicked="#onBackButtonClicked" disable="true" text="%creator.instance.popup.button.back" />
            </VBox>
        </GridPane>
    </AnchorPane>
</HBox>
