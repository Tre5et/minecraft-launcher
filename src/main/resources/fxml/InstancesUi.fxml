<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<GridPane prefHeight="400.0" prefWidth="900.0" stylesheets="@/css/Global.css,@/css/InstancesUi.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.treset.minecraftlauncher.ui.controller.instances.InstancesUiController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="48.0" minHeight="48.0" prefHeight="48.0" vgrow="NEVER" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="48.0" minHeight="48.0" prefHeight="48.0" valignment="CENTER" vgrow="NEVER" />
    </rowConstraints>
    <GridPane GridPane.rowIndex="0">
      <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>
    <SplitPane dividerPositions="0.33, 0.66" GridPane.rowIndex="1">
        <AnchorPane styleClass="split-pane-element-left,element-container">
            <VBox alignment="TOP_CENTER"  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <VBox alignment="TOP_CENTER" styleClass="title-container">
                    <Label styleClass="title" text="%instances.label.title"/>
                </VBox>
                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <VBox fx:id="instanceContainer" alignment="TOP_CENTER">
                    </VBox>
                </ScrollPane>
            </VBox>
        </AnchorPane>
        <AnchorPane fx:id="detailsPane" prefHeight="200.0" prefWidth="200.0" styleClass="split-pane-element-center,element-container">
            <VBox alignment="TOP_CENTER"  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <HBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Button fx:id="playButton" disable="true" styleClass="invisible" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0" minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onPlayButtonClicked">
                        <graphic>
                            <FontIcon iconLiteral="mdomz-play_arrow:48" styleClass="icon"/>
                        </graphic>
                    </Button>
                    <Label fx:id="instanceDetailsTitle" styleClass="title" text="%instances.label.details.title"/>
                </HBox>
                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <fx:include fx:id="instanceDetails" source="InstanceDetails.fxml"/>
                </ScrollPane>
            </VBox>
        </AnchorPane>
        <AnchorPane fx:id="componentPane" prefHeight="200.0" prefWidth="200.0" styleClass="split-pane-element-right" />
    </SplitPane>
    <fx:include fx:id="navbar" source="Navbar.fxml" GridPane.rowIndex="2" />
</GridPane>
