<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import net.treset.minecraftlauncher.ui.generic.ActionBar?>
<?import net.treset.minecraftlauncher.ui.generic.ButtonBox?>
<?import net.treset.minecraftlauncher.ui.generic.ComponentChangerElement?>
<AnchorPane fx:id="rootPane" stylesheets="@/css/generic/SelectorElement.css" visible="false" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.treset.minecraftlauncher.ui.selector.InstanceSelectorElement">
    <SplitPane dividerPositions="0.33, 0.66" styleClass="element-root" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <AnchorPane minWidth="-Infinity" styleClass="element">
            <VBox alignment="TOP_CENTER" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <StackPane alignment="TOP_CENTER" styleClass="title-container">
                    <Label styleClass="title" text="%instances.label.title"/>
                    <ButtonBox fx:id="cbSort" iconClass="sort" onAction="#onSort" />
                </StackPane>
                <ScrollPane fitToHeight="true" fitToWidth="true" minWidth="-Infinity">
                    <VBox fx:id="vbElements" alignment="TOP_CENTER"/>
                </ScrollPane>
            </VBox>
        </AnchorPane>
        <AnchorPane minWidth="-Infinity" styleClass="element">
            <VBox alignment="TOP_CENTER" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <ActionBar fx:id="abMain" disable="true" showPlay="true"
                           defaultLabel="%instances.label.details.title"
                           onPlay="#onPlay"
                           onEdit="#onEdit"
                           onFolder="#onFolder"
                           onDelete="#onDelete"
                />
                <ScrollPane fitToHeight="true" fitToWidth="true" minWidth="-Infinity">
                    <fx:include fx:id="icDetails" source="../manager/InstanceManagerElement.fxml" />
                </ScrollPane>
            </VBox>
        </AnchorPane>
        <AnchorPane styleClass="element">
            <VBox alignment="TOP_CENTER"  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >
                <ActionBar fx:id="abComponent" disable="true" showEdit="false" showDelete="false"
                           defaultLabel="%selector.instance.label.component.title"
                           onFolder="#onComponentFolder"
                />
                <AnchorPane>
                    <ComponentChangerElement fx:id="ccChanger" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    <fx:include fx:id="icVersionChanger" source="/fxml/generic/VersionChangerElement.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    <fx:include fx:id="icInstanceSettings" source="/fxml/manager/InstanceSettingsElement.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                </AnchorPane>
            </VBox>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
