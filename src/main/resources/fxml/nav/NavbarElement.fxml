<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<?import javafx.scene.image.ImageView?>
<GridPane stylesheets="@/css/nav/NavbarElement.css" alignment="CENTER" prefHeight="48" prefWidth="500" styleClass="navbar"
          xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="net.treset.minecraftlauncher.ui.nav.NavbarElement">
   <padding>
      <Insets bottom="5" />
   </padding>
   <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
   </columnConstraints>
   <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" styleClass="navbar-cluster"
         GridPane.columnIndex="0">
      <GridPane.margin>
         <Insets/>
      </GridPane.margin>
      <Button fx:id="homeButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
              styleClass="invisible" minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onHomeButtonClicked">
         <graphic>
            <FontIcon iconLiteral="bi-view-list:32">
               <styleClass>
                  <String fx:value="icon"/>
               </styleClass>
            </FontIcon>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <tooltip>
            <Tooltip text="%nav.tooltip.home"/>
         </tooltip>
      </Button>
      <Button fx:id="addButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
              minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onAddButtonClicked">
         <styleClass>
            <String fx:value="invisible"/>
         </styleClass>
         <graphic>
            <FontIcon iconLiteral="bi-plus-square:32">
               <styleClass>
                  <String fx:value="icon"/>
               </styleClass>
            </FontIcon>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <tooltip>
            <Tooltip text="%nav.tooltip.add"/>
         </tooltip>
      </Button>
   </HBox>
   <HBox alignment="CENTER" prefHeight="48.0" prefWidth="120.0" styleClass="navbar-cluster" GridPane.columnIndex="1">
      <Button fx:id="savesButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
              minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onSavesButtonClicked">
         <styleClass>
            <String fx:value="invisible"/>
         </styleClass>
         <graphic>
            <FontIcon iconLiteral="bi-box-arrow-down:32">
               <styleClass>
                  <String fx:value="icon"/>
               </styleClass>
            </FontIcon>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <tooltip>
            <Tooltip text="%nav.tooltip.saves"/>
         </tooltip>
      </Button>
      <Button fx:id="resoucepacksButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
              minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onResourcepacksButtonClicked">
         <styleClass>
            <String fx:value="invisible"/>
         </styleClass>
         <graphic>
            <FontIcon iconLiteral="bi-file-zip:32">
               <styleClass>
                  <String fx:value="icon"/>
               </styleClass>
            </FontIcon>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <tooltip>
            <Tooltip text="%nav.tooltip.resourcepacks"/>
         </tooltip>
      </Button>
      <Button fx:id="optionsButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
              minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onOptionsButtonClicked">
         <styleClass>
            <String fx:value="invisible"/>
         </styleClass>
         <graphic>
            <FontIcon iconLiteral="bi-sliders:32">
               <styleClass>
                  <String fx:value="icon"/>
               </styleClass>
            </FontIcon>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <tooltip>
            <Tooltip text="%nav.tooltip.options"/>
         </tooltip>
      </Button>
      <Button fx:id="modsButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
              minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onModsButtonClicked">
         <styleClass>
            <String fx:value="invisible"/>
         </styleClass>
         <graphic>
            <FontIcon iconLiteral="bi-puzzle:32">
               <styleClass>
                  <String fx:value="icon"/>
               </styleClass>
            </FontIcon>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
         <tooltip>
            <Tooltip text="%nav.tooltip.mods"/>
         </tooltip>
      </Button>
      <GridPane.margin>
         <Insets left="10.0" right="10.0"/>
      </GridPane.margin>

   </HBox>
   <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" styleClass="navbar-cluster"
         GridPane.columnIndex="2">
      <StackPane>
         <Button fx:id="profileButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
                 minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onProfileButtonClicked">
            <styleClass>
               <String fx:value="invisible"/>
            </styleClass>
            <graphic>
               <FontIcon iconLiteral="bi-person-square:32">
                  <styleClass>
                     <String fx:value="icon"/>
                  </styleClass>
               </FontIcon>
            </graphic>
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <tooltip>
               <Tooltip text="%nav.tooltip.profile"/>
            </tooltip>
         </Button>
         <ImageView fx:id="profileImage" mouseTransparent="true" smooth="false" />
      </StackPane>
      <GridPane.margin>
         <Insets/>
      </GridPane.margin>
   </HBox>
</GridPane>
