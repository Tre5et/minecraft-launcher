<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="rootPane" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.treset.minecraftlauncher.ui.create.ModsCreatorElement">
    <RadioButton fx:id="rbCreate" mnemonicParsing="false" onAction="#onRadioCreate" selected="true" text="%creator.radio.create">
        <toggleGroup>
            <ToggleGroup fx:id="tgCreateType"/>
        </toggleGroup>
    </RadioButton>
    <VBox fx:id="bvCreate" minHeight="-Infinity" minWidth="-Infinity">
        <HBox alignment="CENTER_LEFT">
            <TextField fx:id="tfCreateName" promptText="%creator.prompt.name" HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="cbCreateVersion" visible="false" promptText="%creator.mods.prompt.version" HBox.hgrow="NEVER" />
            <CheckBox fx:id="chCreateSnapshots" onAction="#onSnapshotsCheck" visible="false" text="%creator.version.checkbox.snapshots" />
        </HBox>
        <Label fx:id="lbCreateError" styleClass="error" text="%creator.label.error.name" visible="false" />
        <Label fx:id="lbCreateVersionError" styleClass="error" text="%creator.version.label.error.version" visible="false" />
    </VBox>
    <RadioButton fx:id="rbInherit" mnemonicParsing="false" onAction="#onRadioInherit" text="%creator.radio.inherit" toggleGroup="$tgCreateType" />
    <VBox fx:id="vbInherit" minHeight="-Infinity" minWidth="-Infinity">
        <TextField fx:id="lbInheritName" promptText="%creator.prompt.name" />
        <ComboBox fx:id="cbInherit" promptText="%creator.prompt.component" />
        <Label fx:id="lbInheritErrorName" styleClass="error" text="%creator.label.error.name" visible="false" />
        <Label fx:id="lbInheritErrorSelect" styleClass="error" text="%creator.label.error.select" visible="false" />
    </VBox>
    <RadioButton fx:id="rbUse" mnemonicParsing="false" onAction="#onRadioUse" text="%creator.radio.use" toggleGroup="$tgCreateType" />
    <VBox fx:id="vbUse" minHeight="-Infinity" minWidth="-Infinity">
        <ComboBox fx:id="cbUse" promptText="%creator.prompt.component" />
        <Label fx:id="lbUseError" styleClass="error" text="%creator.label.error.select" visible="false" />
    </VBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>

