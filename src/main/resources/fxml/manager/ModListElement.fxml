<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<AnchorPane fx:id="rootPane" minWidth="-Infinity" styleClass="element-root" stylesheets="@/css/manager/ModsListElement.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.treset.minecraftlauncher.ui.manager.ModListElement">
    <GridPane styleClass="element-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <VBox alignment="CENTER_LEFT" GridPane.rowSpan="2">
            <Label fx:id="title" minWidth="-Infinity" styleClass="element-title" text="Title" />
            <Label fx:id="description" styleClass="element-details" text="Description" />
        </VBox>
        <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.fillWidth="true">
            <Button fx:id="installButton" styleClass="button, invisible" >
                <graphic>
                    <FontIcon iconLiteral="mdoal-cloud_download:32" styleClass="icon" />
                </graphic>
            </Button>
            <ComboBox fx:id="versionSelector" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <ImageView fx:id="modrinthLogo" fitHeight="36" fitWidth="36" pickOnBounds="true" preserveRatio="true" styleClass="modrinth">
            <HBox.margin>
               <Insets right="5.0" />
            </HBox.margin>
            </ImageView>
            <ImageView fx:id="curseforgeLogo" fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true" styleClass="curseforge">
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin>
            </ImageView>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
        </HBox>
    </GridPane>
</AnchorPane>
