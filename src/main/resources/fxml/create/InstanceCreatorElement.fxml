<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox fx:id="rootPane" alignment="TOP_CENTER" visible="false" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.treset.minecraftlauncher.ui.create.InstanceCreatorElement">
    <ScrollPane fx:id="scrollContainer" minWidth="-Infinity">
        <GridPane alignment="TOP_CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>

            <VBox>
                <HBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Label styleClass="title" text="%creator.instance.label.instance"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="%creator.label.name" />
                    <TextField fx:id="nameInput" />
                    <padding>
                        <Insets left="10.0" top="10.0" />
                    </padding>
                </HBox>
                <Label fx:id="nameError" styleClass="error" text="%creator.label.error.name" visible="false" />
            </VBox>

            <VBox GridPane.columnIndex="1">
                <HBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Label styleClass="title" text="%creator.instance.label.version"/>
                </HBox>
                <fx:include fx:id="versionCreator" source="VersionCreatorElement.fxml" />
            </VBox>

            <VBox GridPane.columnIndex="2">
                <HBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Label styleClass="title" text="%creator.instance.label.saves"/>
                </HBox>
                <fx:include fx:id="savesCreator" source="SavesCreatorElement.fxml" />
            </VBox>

            <VBox GridPane.rowIndex="1">
                <HBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Label styleClass="title" text="%creator.instance.label.resourcepacks"/>
                </HBox>
                <fx:include fx:id="resourcepacksCreator" source="ResourcepacksCreatorElement.fxml" />
            </VBox>

            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                <HBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Label styleClass="title" text="%creator.instance.label.options"/>
                </HBox>
                <fx:include fx:id="optionsCreator" source="OptionsCreatorElement.fxml" />
            </VBox>

            <VBox fx:id="modsContainer" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <HBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Label styleClass="title" text="%creator.instance.label.mods"/>
                </HBox>
                <fx:include fx:id="modsCreator" source="ModsCreatorElement.fxml" />
            </VBox>

            <Button fx:id="createButton" onAction="#onCreateButtonClicked" text="%creator.button.create" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.fillWidth="true" GridPane.rowIndex="3" GridPane.halignment="CENTER" />
        </GridPane>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </ScrollPane>
</HBox>
