<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="rootPane" styleClass="popup-background" stylesheets="@/css/generic/PopupElement.css" visible="false" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.treset.minecraftlauncher.ui.generic.PopupElement">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <GridPane fx:id="gpContainer" styleClass="popup-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints valignment="BOTTOM" vgrow="SOMETIMES" />
        </rowConstraints>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <Label fx:id="lbTitle" alignment="TOP_CENTER" styleClass="title" text="You should not be seeing this" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS" />
            <Label fx:id="lbMessage" alignment="TOP_CENTER" styleClass="message" text="This isn't good" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS" />
            <HBox fx:id="hbInputContainer" alignment="CENTER" />
            <Label fx:id="lbError" styleClass="error" alignment="TOP_CENTER" />
        </VBox>
        <HBox fx:id="hbControlContainer" alignment="CENTER" spacing="10.0" styleClass="button-container" GridPane.rowIndex="1" />
    </GridPane>
</GridPane>
