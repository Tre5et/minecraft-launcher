<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>


<VBox alignment="TOP_CENTER"  prefHeight="850.0" prefWidth="1600.0" stylesheets="@/css/global/Global.css,@/css/login/LoginScreen.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="net.treset.minecraftlauncher.ui.login.LoginController">
    <fx:include fx:id="titlebar" source="/fxml/title/TitlebarElement.fxml" VBox.vgrow="NEVER"/>
    <SplitPane dividerPositions="0.26057906458797325" styleClass="element-root"
               VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="100.0"
              styleClass="element">
            <Button fx:id="loginButton" alignment="CENTER" minWidth="-Infinity" onAction="#onLoginButtonClicked"
                    text="%login.button.microsoft" textAlignment="CENTER"/>
        </VBox>
        <GridPane alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" styleClass="element">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="BOTTOM" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="CENTER" minHeight="-Infinity"
                   minWidth="-Infinity" styleClass="title" textAlignment="CENTER" GridPane.columnIndex="1"
                   GridPane.rowIndex="1">
                <font>
                    <Font size="30.0"/>
                </font>
            </Label>
            <Button fx:id="continueButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="48.0" maxWidth="48.0"
                    minHeight="48.0" minWidth="48.0" mnemonicParsing="false" onAction="#onContinueButtonClicked"
                    visible="false" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets bottom="20.0" right="20.0"/>
                </GridPane.margin>
                <graphic>
                    <FontIcon iconLiteral="mdal-chevron_right:48">
                        <styleClass>
                            <String fx:value="button-icon"/>
                        </styleClass>
                    </FontIcon>
                </graphic>
            </Button>
        </GridPane>
    </SplitPane>
</VBox>
